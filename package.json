{
  "name": "oxfordMushroomCompany",
  "version": "0.1.0",
  "description": "Website for the Oxford Mushroom Company",
  "scripts": {
    "clean:dist": "rm -rf dist && mkdir -p dist/assets/{images,stylesheets,javascripts}",
    "build": "scripts/build.sh",
    "build:css": "node-sass src/assets/stylesheets/ -o dist/assets/stylesheets/ --output-style compressed",
    "postbuild:css": "postcss dist/assets/stylesheets/*.css -d dist/assets/stylesheets/ --parser sugarss",
    "lint:css": "stylelint --config .stylelintrc src/assets/stylesheets/**/*.scss --syntax scss -f verbose",
    "build:html": "node scripts/htmlBuilder.js",
    "copy:images": "rm -rf dist/assets/images && mkdir -p dist/assets/images && cp -R src/assets/images/* dist/assets/images/",
    "lint:js": "standard",
    "build:js": "rollup -c",
    "test": "npm run lint:js && npm run lint:css && npm run build:js",
    "watch:css": "node-sass --source-map true -wr src/assets/stylesheets/ -o dist/assets/stylesheets/",
    "watch:html": "nodemon -w src/ -e njk -x 'npm run build:html'",
    "watch:images": "nodemon -w src/assets/images/ -e jpg,png -x 'npm run copy:images'",
    "watch:js": "nodemon -w src/ -e js -x 'npm run build:html && npm run build:js'",
    "prewatch": "npm run clean:dist && npm run build:css",
    "watch": "npm run watch:html & npm run watch:images & npm run watch:css & npm run watch:js",
    "hash:assets": "scripts/hash-assets.sh",
    "hash:images": "scripts/hash-images.sh",
    "integrity:assets": "scripts/integrity-assets.sh"
  },
  "author": "feedMyPixel",
  "contributors": "Ben Chidgey <ben@feedmypixel.com>",
  "dependencies": {
    "nunjucks": "3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-preset-es2015-rollup": "3.0.0",
    "node-sass": "4.5.2",
    "nodemon": "1.11.0",
    "postcss-cli": "3.2.0",
    "postcss-pxtorem": "4.0.0",
    "rollup": "0.41.6",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-uglify": "1.0.2",
    "standard": "10.0.2",
    "stylelint": "7.10.1"
  }
}
